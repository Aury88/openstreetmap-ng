{
  "name": "openstreetmap-ng",
  "private": true,
  "dependencies": {
    "@rapideditor/rapid": "github:facebook/Rapid#release",
    "bootstrap": "^5.3.2",
    "i18next": "^23.7.18",
    "i18next-http-backend": "^2.4.2",
    "iD": "github:openstreetmap/iD#release",
    "leaflet": "^1.8.0",
    "leaflet.locatecontrol": "^0.79.0",
    "osm-community-index": "^5.6.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "onchange": "^7.1.0",
    "postcss-cli": "^11.0.0",
    "bun-types": "latest"
  },
  "scripts": {
    "prefix:css": "postcss src/static/css/**/*.css --use autoprefixer --replace --no-map",
    "build:sass": "sass --style compressed --load-path node_modules --no-source-map src/static/sass:src/static/css && bun run prefix:css",
    "watch:sass": "bun run build:sass && onchange 'src/static/sass/**/*.scss' -- bun run build:sass"
  },
  "browserslist": [
    "defaults"
  ]
}
