<div class="social-entry status">
    <p class="header text-muted d-flex justify-content-between">
        <span>
            {% if element.changeset.user_id is none %}
            {{ t('browse.anonymous') }}
            {% else %}
            <a href="/user/{{ element.changeset.user.display_name }}">
                <img class="avatar" src="{{ element.changeset.user.avatar_url }}" alt="{{ t('user.profile_picture') }}">{#
            #}{{ element.changeset.user.display_name }}{#
            #}</a>
            {% endif %}
            {% if element.visible %}
            {{ t('action.edited') }}
            {% else %}
            {{ t('action.deleted') }}
            {% endif %}
            {{ timeago(element.created_at, html=True) | safe }}
        </span>
        {% if not element.visible %}
        <span>
            <span class="badge text-bg-secondary">
                <i class="bi bi-trash-fill"></i>
            </span>
        </span>
        {% endif %}
    </p>
    <div class="body">
        <p class="position-relative mb-1">
            {{ t('browse.in_changeset') }}
            #<a href="/changeset/{{ element.changeset_id }}">{#
                #}{{ element.changeset_id }}
            </a>
        </p>
        <p class="fst-italic">
            {% for value in comment_tag.values %}
            {% include 'partial/_tag_value.jinja2' %}
            {% endfor %}
        </p>
    </div>
</div>

{% if element.point is not none %}
<p class="position-relative mb-2">
    <b class="me-1">â€¢</b>
    {{ t('diary_entries.form.location') }}:
    <button class="location-btn btn btn-link p-0 stretched-link" data-lon="{{ element.point.x }}"
        data-lat="{{ element.point.y }}">
        {{ element.point.y }}, {{ element.point.x }}
    </button>
</p>
{% endif %}

{% if tags %}
<div class="tags">
    <table class="table table-sm">
        <tbody dir="auto">
            {% for tag in tags %}
            <tr>
                <td>
                    {% set value = tag.key %}
                    {% include 'partial/_tag_value.jinja2' %}
                </td>
                <td>
                    {% for value in tag.values %}
                    {% include 'partial/_tag_value.jinja2' %}
                    {% endfor %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}

{% set table %}
{% if compact %}
<details>
    <table class="table table-borderless mb-0">
        <tbody></tbody>
    </table>
    <nav aria-label="{{ t('alt.elements_page_navigation') }}">
        <ul class="pagination pagination-sm justify-content-end mt-2"></ul>
    </nav>
</details>
{% else %}
<table class="table table-borderless mb-0">
    <tbody></tbody>
</table>
<nav aria-label="{{ t('alt.elements_page_navigation') }}">
    <ul class="pagination pagination-sm justify-content-end mt-2"></ul>
</nav>
{% endif %}
{% endset %}

{% if show_part_of %}
<div class="part-of mt-4 mb-1">
    <h4 class="title"></h4>
    {{ table }}
    <template class="entry">
        <tr>
            <td><img></td>
            <td>
            </td>
        </tr>
    </template>
</div>
{% endif %}

{% if show_elements %}
<div class="elements mt-4 mb-1">
    <h4 class="title"></h4>
    {{ table }}
    <template class="entry">
        <tr>
            <td><img></td>
            <td>
            </td>
        </tr>
    </template>
</div>
{% endif %}
