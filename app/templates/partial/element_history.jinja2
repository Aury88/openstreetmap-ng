<div class="sidebar-content">
    {% set data = elements_data[0] %}
    {% set element = data.element %}
    <div class="section pb-1">
        <div class="row g-1 mb-1">
            <div class="col">
                <h2 class="sidebar-title">
                    {% set type = element.type %}
                    {% if type == 'node' %}
                    {{ t('browse.node.history_title_html', name=element.id) | safe }}
                    {% elif type == 'way' %}
                    {{ t('browse.way.history_title_html', name=element.id) | safe }}
                    {% elif type == 'relation' %}
                    {{ t('browse.relation.history_title_html', name=element.id) | safe }}
                    {% endif %}
                </h2>
            </div>
            <div class="col-auto">
                <button class="btn-close" aria-label="{{ t('javascripts.close') }}"></button>
            </div>
        </div>
    </div>

    {% for data in elements_data %}
    {% set element = data.element %}
    {% set prev_version = data.prev_version %}
    {% set next_version = data.next_version %}
    {% set name = data.name %}
    {% set tags = data.tags %}
    {% set comment_tag = data.comment_tag %}
    {% set show_elements = data.show_elements %}
    {% set show_part_of = data.show_part_of %}
    {% set params = data.params %}
    {% set compact = True %}
    <div class="version-section section" data-params="{{ params }}">
        <h3 class="version-badge badge mb-3 {% if next_version is none %}is-latest{% endif %}">
            {{ t('browse.version') }} {{ element.version }}
        </h3>
        {% include 'partial/_element_content.jinja2' %}
    </div>
    {% endfor %}

    {% if after is not none or before is not none %}
    <div class="section">
        <div class="row">
            <div class="col">
                {% if after is not none %}
                <a class="btn btn-primary" href="/{{ element.type }}/{{ element.id }}/history?after={{ after }}">
                    {{ t('pagination.previous_page') }}
                </a>
                {% endif %}
            </div>

            <div class="col text-end">
                {% if before is not none %}
                <a class="btn btn-primary" href="/{{ element.type }}/{{ element.id }}/history?before={{ before }}">
                    {{ t('pagination.next_page') }}
                </a>
                {% endif %}
            </div>
        </div>
    </div>
    {% endif %}
</div>
