{% macro row(weekday, name) %}
<tr>
    <td style="width: 15px; position:relative"><span style="position: absolute; font-size: 8px; top: -5px">{{  name  }}</span></td>
    {% for day in weekday %}
    <td class="activity-{{ day  }}"></td>
    {% endfor %}
</tr>
{% endmacro %}

<div class="activity">

    <h3 class="ms-1">Recent activity</h3>
    <p>
        270 mapping days with 7,223 changesets in the last year
    </p>

    <table>
        {{  row(activity.0, "")  }}
        {{  row(activity.1, "Tue")  }}
        {{  row(activity.2, "")  }}
        {{  row(activity.3, "Thu")  }}
        {{  row(activity.4, "")  }}
        {{  row(activity.5, "Sat")  }}
        {{  row(activity.6, "")  }}

    </table>

    <div class="text-end">
        <a class="small me-1" href="/user/{{ profile.display_name }}/groups">
            View full statistics<i class="bi bi-box-arrow-up-right ms-2"></i>
        </a>
    </div>

</div>
