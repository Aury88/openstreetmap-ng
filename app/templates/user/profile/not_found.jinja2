{% extends '_base.jinja2' %}
{% block title_prefix %}{{ t('users.no_such_user.title') }} | {% endblock %}
{% block body_class %}user-profile-body{% endblock %}
{% block body %}

<div class="content-header">
    <div class="col-7 offset-3">
        <div class="d-flex">
            <img class="avatar" src="/static/img/avatar.webp" alt="Missing user profile picture">
            <div class="info">
                <h1 class="d-flex align-items-center">
                    {{ name }}
                </h1>

            </div>
        </div>
    </div>
</div>
<div class="content-body container-fluid">
    <div class="row g-5">
        <div class="col-5 offset-3">
            <h1>{{ t('users.no_such_user.heading').format(user=name) }}</h1> 
            <span>{{ t('users.no_such_user.body').format(user=name) }}</span>           
        </div>
    </div>
</div>

{% endblock %}