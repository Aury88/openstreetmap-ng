{% extends '_base.jinja2' %}
{% block title_prefix %}{{ t('traces.index.public_traces') }} | {% endblock %}
{% block body_class %}traces-index-body{% endblock %}
{% block body %}

<div class="content-header pb-0">
    <div class="container">
        <h1>
            {{ t('traces.index.public_traces') }}
        </h1>
        <p>
            {{ t('traces.index.description') }}
        </p>

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="/traces" aria-current="page">
                    {{ t('traces.index.all_traces') }}
                </a>
            </li>
            {% if user is not none %}
            <li class="nav-item">
                <a class="nav-link" href="/traces/mine">
                    {{ t('traces.index.my_traces') }}
                </a>
            </li>
            {% endif %}
            <li class="nav-item ms-auto">
                {% if user is not none %}
                <a class="btn btn-light border" href="/traces/new">
                    <i class="bi bi-cloud-arrow-up me-2"></i>{{ t('traces.index.upload_trace') }}
                </a>
                {% endif %}
                <a class="btn btn-light border" href="/traces/rss" aria-label="{{ t('alt.rss_feed') }}">
                    <i class="bi bi-rss-fill rss-color"></i>
                </a>
            </li>
        </ul>
    </div>
</div>
<div class="content-body">
    <div class="container">
        {% include 'traces/_list.jinja2' %}
    </div>
</div>

{% endblock %}
