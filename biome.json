{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 4,
    "indentStyle": "space",
    "lineEnding": "lf",
    "lineWidth": 120,
    "ignore": [
      "app/static/js/bundle-*.js"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noVoid": "error",
        "useSimplifiedLogicExpression": "warn"
      },
      "correctness": {
        "noUndeclaredVariables": "warn"
      },
      "style": {
        "noDefaultExport": "warn",
        "noNamespace": "error",
        "noParameterAssign": "off",
        "noParameterProperties": "error",
        "useCollapsedElseIf": "warn",
        "useForOf": "warn",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false
          }
        },
        "useShorthandAssign": "warn"
      },
      "suspicious": {
        "useAwait": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  }
}
